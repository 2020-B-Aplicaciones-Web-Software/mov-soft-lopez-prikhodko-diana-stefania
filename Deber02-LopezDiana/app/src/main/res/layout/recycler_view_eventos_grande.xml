<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="310dp"
        android:layout_height="325dp"
        android:background="@drawable/shadowhite"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="280dp"
                android:layout_height="43dp"
                android:elevation="10dp"
                android:text="Titulo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.695" />

            <Button
                android:id="@+id/btn_meInteresa"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:background="@drawable/shadowgraybutton"
                android:text="     Me interesa"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.942"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/txt_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="280dp"
                android:elevation="10dp"
                android:text="Autor"
                android:textColor="@color/graytext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.781" />

            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="280dp"
                android:elevation="10dp"
                android:text="Fecha"
                android:textAlignment="viewStart"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txt_titulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_fotoEvento"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/btn_compartir"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:background="@drawable/shadowgraybutton"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toEndOf="@+id/btn_meInteresa"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.942"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/img_fotoEvento"
                android:layout_width="310dp"
                android:layout_height="170dp"
                android:elevation="10dp"
                android:scaleType="fitXY"
                android:scaleY="0.995"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:mipmap/sym_def_app_icon" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/btn_meInteresa"
                app:layout_constraintEnd_toEndOf="@+id/btn_meInteresa"
                app:layout_constraintHorizontal_bias="0.20"
                app:layout_constraintStart_toStartOf="@+id/btn_meInteresa"
                app:layout_constraintTop_toTopOf="@+id/btn_meInteresa"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@android:drawable/btn_star" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- res/drawable/myrect.xml -->

